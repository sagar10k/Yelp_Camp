<!--STYLING THE PROFILE-->

    <div class="row">
        <div class="col-lg-3 col-md-4">
            <h1><%= user.firstName.toUpperCase() + " " + user.lastName.toUpperCase() %></h1>
            <div class="thumbnail">
                <img src="<%= user.avatar %>" alt="user profile img">
                <div class="caption">Contact info: <a href="mailto:<%= user.email %>"> <%= user.email %> </a></div>
            </div>
        </div>
    </div>    
    <div class="row">
        <h3>Posts</h3>
        <div class="card-group text-center" >
            <% campgrounds.forEach(function(camp) { %>
                <div class="card col-lg-3 col-md-4 col-sm-6" style="width: 40; height: 40">
                    <img class="card-img-top" src="<%=camp.image%>" alt="post_image" style="width: 100%; height: 200px;">
                    <div class="card-body">
                        <em><a href="/campgrounds/<%= camp.id %>" STYLE="color:black; text-decoration:none"> <%= camp.name %> </a></em>
                        <p class="card-text"><%= camp.description.substring(0, 100) %>....</p>
                        <a href="/campgrounds/<%= camp.id %>" STYLE="color:black; text-decoration:none" type="button" class="btn btn-primary"> View </a>
                        <p class="card-text"><small class="text-muted"> <%= moment(camp.createdAt).fromNow() %> </small></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
<% include ../partials/footer %>