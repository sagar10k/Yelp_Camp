<% include ../partials/header %>
    <div class="row">
        <h1 class="display-1" style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;"> 
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="camp[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" name="camp[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.location %>" name="camp[location]">
                </div>
                <div class="form-group">
                    <input type="file" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name="camp[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Back..</a>
        </div>
    </div>
<% include ../partials/footer %>