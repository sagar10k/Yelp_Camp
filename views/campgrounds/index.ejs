<% include ../partials/header%>

    <header class=jumbotron>
        <div class="container">
             <h1 class="display-3">YELPCAMP Welcomes You!</h1>
             <p>Views of all campgrounds around the World!</p>
             <p><a class="btn btn-primary btn-lg" href="/campgrounds/form">Add Campground</a></p>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        
        <% if(noMatch !== null){ %>
            <div class="col-md-9">
                <h3><%= noMatch %></h3>
            </div>
        <% } %>
        
       <% campground.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img id="home-image" src="<%= camp.image %>">
                        <div class="caption">
                            <h3><%= camp.name %></h3>
                        </div>
                        <p>
                            <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View</a>
                        </p>
                    </div>
            </div>
        <% }); %>
    </div>
<% include ../partials/footer%>