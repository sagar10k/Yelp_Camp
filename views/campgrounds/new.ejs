<% include ../partials/header %>

    <div class="row">
        <h1 class="display-1" style="text-align: center">Create New Campground</h1>
        <div style="width: 30%; margin: 25px auto;"> 
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="file" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="About" name="campground[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
                </div>
            </form>
            <a href="/campgrounds">Back..</a>
        </div>
    </div>

<% include ../partials/footer %>